    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:title" content="{{ pageTitle | default: site.title }}">
    {%- if post %}
    <meta property="og:description" content="{{ post.content | strip_html | strip | truncatewords: 30 }}">
    <meta property="og:image" content="{{ site.url }}/img/{{ post.data.imageFile }}">
    <meta property="og:image:alt" content="{{ post.data.imageAlt }}">
    {%- else %}
    <meta property="og:description" content="{{ site.description }}">
    <meta property="og:image" content="{{ site.url }}/img/link-logo.jpg">
    <meta property="og:image:alt" content="{{ site.linkLogoAltText }}">
    {%- endif %}
