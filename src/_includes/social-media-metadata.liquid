<meta property="og:type" content="website">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title | default: site.title }}">
{%- if tags and tags contains 'post' %}
<meta property="og:description" content="{{ content | strip_html | strip | truncatewords: 30 }}">
<meta name="twitter:description" content="{{ content | strip_html | strip | truncatewords: 30 }}">
{%- else %}
<meta property="og:image" content="{{ site.url }}/img/link-logo.jpeg">
<meta property="og:description" content="{{ site.description }}">
<meta name="twitter:image" content="{{ site.url }}/img/link-logo.jpeg">
<meta name="twitter:image:alt" content="{{ site.linkLogoAltText }}">
<meta name="twitter:description" content="{{ site.description }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title | default: site.title }}">
