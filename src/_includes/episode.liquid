<article>
  {%- if linkInTitle %}
  <h1><a href="{{ postUrl }}">{{ title }}</a></h1>
  {%- else -%}
  <h1>{{ title }}</h1>
  {%- endif -%}
  <p class="space-1999-information">
    Season {{ space1999[episodeNumber].season }},
    Episode {{ space1999[episodeNumber].episode }}.
    First broadcast on {{ space1999[episodeNumber].broadcastDate | date: "%A, %e %B %Y" }}.
  </p>
  <p class="podcast-episode-information">{{ date | date: "%A, %e %B %Y" }}</p>
  {{ content }}
  <figure type="audio">
    <media-controller audio>
      <audio preload="none" slot="media">
        <source src="{% episodeUrl episodeFile %}" type="audio/mp3">
      </audio>
      <media-control-bar>
        <media-play-button></media-play-button>
        <media-time-display showduration></media-time-display>
        <media-time-range></media-time-range>
        <media-mute-button></media-mute-button>
        <media-volume-range></media-volume-range>
      </media-control-bar>
    </media-controller>
    <figcaption>
    <a download href="{% episodeUrl episodeFile %}">Download</a> &middot; <a target="_blank" href="{% episodeUrl episodeFile %}">Open in new window</a> &middot; Duration: {{ episodeDuration }} &middot; Recorded on {{ episodeRecordingDate | date: "%A, %d %B %Y" }}<br>
    Subscribe:&nbsp;&nbsp;
    {% for subscription in podcast.subscriptions %}
      {% if not forloop.first %} &middot;{% endif %} <a href="{{ subscription.url }}"><strong>{{ subscription.name }}</strong></a>
    {% endfor %}
  </figure>
</article>