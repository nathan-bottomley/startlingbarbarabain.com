---
title: Startling Barbara Bain
permalink: "/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber | plus: 1 }}/{% endif %}"
layout: layouts/base
pagination:
  data: collections.post
  size: 12
  reverse: true
  alias: posts
---
{% for post in posts %}
  {% render 'episode.liquid', linkInTitle: true,
                              title: post.data.title,
                              date: post.date,
                              postUrl: post.url,
                              episodeRecordingDate: post.data.episodeRecordingDate,
                              episodeNumber: post.data.episodeNumber,
                              episodeDuration: post.data.episodeDuration,
                              episodeFile: post.data.episodeFile,
                              content: post.content,
                              space1999: post.data.space1999,
                              podcast: post.data.podcast %}
{% endfor %}
